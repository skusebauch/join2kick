<%= form_tag players_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a player"
  %>
  <%= submit_tag "Search", class: "button" %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="players">
        <% @players.each do |player| %>
          <h4><%= player.name %></h4>
          <p><%= player.position %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
