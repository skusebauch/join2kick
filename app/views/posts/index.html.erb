<div class="container">
  <h3>Your Newsfeed</h3>
  <div class="inputform">
    <%= simple_form_for @post do |f| %>
      <%= f.input :content %>
      <%= f.submit %>
    <% end %>
  </div>

  <% @current_user_posts.each do |post| %>
  <div class="o-posts">
    <%= post.user.email %>
    <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, post_path(post), method: :delete, data: { confirm: "Are you sure?"} %>
    <div class="o-post">
    <%= post.content %>
    </div>
  </div>
  <% end %>

  <% @followers_posts.each do |post| %>
    <div class="posts">
      <%= image_tag(post.user.player.image, class: 'img-post') %>
      <%= post.user.email %>
      <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, post_path(post), method: :delete, data: { confirm: "Are you sure?"} %>
      <div class="post">
        <%= post.content %>
      </div>
    </div>
  <% end %>
</div>

