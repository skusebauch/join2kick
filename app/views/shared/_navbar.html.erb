<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="logo-class">
    <%= link_to image_tag('Logo.png'), posts_path %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <% if user_signed_in? %>
    <div class="nav-search">
      <%= form_tag players_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: 'Find a player'
      %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">


      <ul class="navbar-nav mr-auto">


        <li class="nav-item">
          <%= link_to "Team", club_path(current_user.club.nil? ? current_user.player.club : current_user.club), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Player", players_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Network", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", conversations_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1525092814/cq5zoucfrobsomypnwzy.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "button-light" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
